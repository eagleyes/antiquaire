<h1>Listing products</h1>

<table>
  <tr>
    <th><%=t :name %></th>
    <th><%=t :description %></th>
    <th><%=t :category %></th>
    <th><%=t :purchaseDate %></th>
    <th><%=t :manufactureYear %></th>
    <th><%=t :purchasePrice %></th>
    <th><%=t :qtyInStock %></th>
    <th><%=t :qtyInStockAdj %></th>
    <th><%=t :country %></th>
    <th><%=t :height %></th>
    <th><%=t :width %></th>
    <th><%=t :length %></th>
    <th><%=t :material %></th>
    <th><%=t :style %></th>
    <th><%=t :photo %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= product.category_id %></td>
    <td><%= l product.purchase_date %></td>
    <td><%= product.manufacture_year %></td>
    <td><%= product.purchase_price %></td>
    <td><%= product.qty_in_stock %></td>
    <td><%= product.qty_in_stock_adj %></td>
    <td><%= product.country_id %></td>
    <td><%= product.height %></td>
    <td><%= product.width %></td>
    <td><%= product.length %></td>
    <td><%= product.material_id %></td>
    <td><%= product.style_id %></td>
    <td><%= product.photo %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

